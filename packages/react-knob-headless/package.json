{
  "name": "react-knob-headless",
  "version": "0.4.0",
  "license": "MIT",
  "author": "@satelllte (https://github.com/satelllte)",
  "description": "Unstyled & accessible knob primitive for React",
  "keywords": [
    "knob",
    "slider",
    "rotary",
    "rotary-knob",
    "headless-ui",
    "headlessui-react",
    "react-knob",
    "dial-knob",
    "react-dial-knob",
    "react-rotary-knob"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest --coverage",
    "test:types": "tsc --noEmit",
    "test:lint": "eslint ./src/**/* --max-warnings=0 --format=compact"
  },
  "dependencies": {
    "@dsp-ts/math": "^0.1.0",
    "@use-gesture/react": "^10.3.0",
    "merge-props": "^6.0.0"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^16.8 || ^17.0 || ^18.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satelllte/react-knob-headless.git"
  },
  "bugs": {
    "url": "https://github.com/satelllte/react-knob-headless/issues"
  }
}
